{
  "dashboard": {
    "title": "Copilot API - Overview",
    "tags": ["copilot", "observability"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(copilot_requests_total[5m])",
            "legendFormat": "{{endpoint}} - {{status_code}}"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
      },
      {
        "id": 2,
        "title": "Error Rate (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "100 * (rate(copilot_requests_total{status_code=~\"5..\"}[5m]) / rate(copilot_requests_total[5m]))",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
      },
      {
        "id": 3,
        "title": "Request Latency (p50, p95, p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(copilot_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50 - {{endpoint}}"
          },
          {
            "expr": "histogram_quantile(0.95, rate(copilot_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{endpoint}}"
          },
          {
            "expr": "histogram_quantile(0.99, rate(copilot_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 - {{endpoint}}"
          }
        ],
        "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8}
      },
      {
        "id": 4,
        "title": "RAG Precision Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "copilot_rag_precision",
            "legendFormat": "RAG Precision"
          }
        ],
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 6},
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.85, "color": "yellow"},
                {"value": 0.90, "color": "green"}
              ]
            },
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 5,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "targets": [
          {
            "expr": "copilot_cache_hit_ratio",
            "legendFormat": "Hit Ratio"
          }
        ],
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 6},
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.6, "color": "green"}
              ]
            },
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 6,
        "title": "Citations per Response",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(copilot_citation_count_sum[5m]) / rate(copilot_citation_count_count[5m])",
            "legendFormat": "Avg Citations"
          }
        ],
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 6}
      },
      {
        "id": 7,
        "title": "Guardrails Rejections",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(copilot_guardrails_rejections_total[5m])",
            "legendFormat": "{{rejection_type}}"
          }
        ],
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 6}
      },
      {
        "id": 8,
        "title": "GPU Utilization (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "copilot_gpu_utilization_percent",
            "legendFormat": "GPU Utilization"
          }
        ],
        "gridPos": {"x": 0, "y": 22, "w": 12, "h": 6},
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "LLM Inference Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(copilot_llm_inference_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 LLM Time"
          }
        ],
        "gridPos": {"x": 12, "y": 22, "w": 12, "h": 6}
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-30m",
      "to": "now"
    }
  }
}
